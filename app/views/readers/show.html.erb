<% if notice %>
<div class="flash-notice">
	<p><%= notice %></p>
</div>
<% end %>
<div class="user-container">
	<section class="user-panel">
		<h1>Welcome to your profile, <%= current_reader.first_name %></h1>
		<%= simple_form_for current_reader do |f| %>
			<%= image_tag(current_reader.avatar) %>
			<div class="input-group">
				<%= f.input_field :first_name, disabled: true, class: "first_name" %>
				<button class="edit-button" data-user="first_name">
					<i class="fa fa-pencil"></i>
				</button>
			</div>
			<div class="input-group">
				<%= f.input_field :last_name,  disabled: true, class: "last_name"  %>
				<button class="edit-button" data-user="last_name">
					<i class="fa fa-pencil"></i>
				</button>
			</div>
			<div class="input-group">
				<%= f.input_field :email, disabled: true, class: "email"  %>
				<button class="edit-button" data-user="email">
					<i class="fa fa-pencil"></i>
				</button>
			</div>
			<div class="input-group">
				<%= f.input_field :address, disabled: true, class: "address"  %>
				<button class="edit-button" data-user="address">
					<i class="fa fa-pencil"></i>
				</button>
			</div>
			<div class="input-group">
				<%= f.input_field :postcode,  disabled: true, class: "postcode" %>
				<button class="edit-button" data-user="postcode">
					<i class="fa fa-pencil"></i>
				</button>
			</div>
			<div class="input-group">
				<%= f.input_field :city, disabled: true, class: "city"  %>
				<button class="edit-button" data-user="city">
					<i class="fa fa-pencil"></i>
				</button>
			</div>
			<%= f.button :submit %> 
		<% end %>
	</section>
</div>