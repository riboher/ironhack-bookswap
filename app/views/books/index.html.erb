<div class="row-top js-sticky-bar">
	<button type="button" class="js-menu-trigger sliding-panel-button">
	  |||
	</button>
	<div class="modal">
	  <label for="modal-1">
	    <button class="modal-trigger"><i class="fa fa-plus">Add new book</i></button>
	  </label>
	  <input class="modal-state" id="modal-1" type="checkbox" />
	  <div class="modal-fade-screen">
	    <div class="modal-inner js-isbn-modal">
	      <div class="modal-close" for="modal-1"></div>
	      <h1>ISBN Searcher</h1>
	      <form class="search-bar js-create-book" role="search">
	      	  <input type="search" class="search-isbn" placeholder="Enter ISBN" />
	      	  <button type="submit">
	      	    <i class="fa fa-search"></i>
	      	  </button>
	      	</form>
	    </div>
	  </div>
	</div>
	<form class="search-bar" role="search">
	  <input type="search" placeholder="Enter Search" />
	  <button type="submit">
	    <!-- <img src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon-black.png" alt="Search Icon"> -->
	    <i class="fa fa-search"></i>
	  </button>
	</form>
</div>
<nav class="js-menu sliding-panel-content">
  <ul>
    <li><a href="javascript:;">My Profile</a></li>
    <li><a href="javascript:;">Crear libro</a></li>
    <li><a href="javascript:;">Filtros</a></li>
  </ul>
</nav>
<div class="js-menu-screen sliding-panel-fade-screen"></div>
<div class="row">
	<% @selling_books.each do |book|%>
		<div class="item">
			<section class="item-box">
				<article class="item-box-actions">
					<a href="#" class="item-price"><%= book.price %><i class="fa fa-connectdevelop"></i></a>
				</article>
				<article class="item-thumbnail">
					<%= image_tag(book.cover) %>
				</article>
				<article class="add-item">
					<button><i class="fa fa-book fa-3x"></i></button>
				</article>
				<article class="item-inner-elements">
					<h6 class="item-title"><%= book.title %></h6>
					<p class="item-author"><%= format_author(book.author) %></p>
					<p class="item-description">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Similique rem atque necessitatibus.</p>
				</article>
			</section>
		</div>
	<% end %>
</div>

