<div class="book">
	<div class="front">
		<section class="book-box">
			<article class="book-box-actions">
				<span class="book-price"><%= book.price %><i class="fa fa-book"></i><span/>
			</article>
			<article class="book-thumbnail">
				<%= image_tag(book.cover) %>
			</article>
			<article class="book-inner-elements">
				<h6 class="book-title"><%= book.title %></h6>
				<p class="book-author"><%= format_author(book.author) %></p>
			</article>
			<article>
				<p  class="book-more-info">Saber más</p>
			</article>
		</section>
	</div>
	<div class="back hidden">
		<section class="book-box">
			<% if reader_signed_in? %>
				<article class="book-owner">
					<p>Este libro es de: </p>
					<p class="book-owner-name"><%= format_owner_name(book.reader.first_name,book.reader.last_name)%></p>
					<%= image_tag(book.reader.avatar, size: '100x100') %>
					<% if book.description %>
						<p><%= format_owner_name(book.reader.first_name,book.reader.last_name) %> dice acerca de este libro: </p>
						<p><%= book.description %></p>
					<% end %>
				</article>
				<article class="swap-book">
					<%= button_to swap_book_path(book.id), disabled: compare_credit(book.price,current_reader.credit) do %>
					  <span class="swap">Swap it!</span>
					<% end %>
					<h6><%= book.price %> points</h6>
				</article>
				<article class="book-box-actions">
					<a href="#" class="reader-credit">Your credit: <%= current_reader.credit %><i class="fa fa-connectdevelop"></i></a>
				</article>
			<% else %>
				<article class="back-login-buttons">
					<h4>No estás conectado?</h4>
					<div>
						<button class="sign js-access-button" data-session="signup">Regístrate</button>
					</div>
					<div>
						<button class="log js-access-button" data-session="login">Conéctate</button>
					</div>
				</article>
			<% end %>
		</section>
	</div>
</div>
